# =======================
# DJANGO CONFIGURATION
# =======================
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-a-strong-key
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# =======================
# DATABASE CONFIGURATION (AWS RDS MySQL)
# =======================
# Always uses MySQL RDS - configure your RDS instance details below
DB_NAME=designia_production
DB_USER=admin
DB_PASSWORD=your-strong-db-password
DB_HOST=your-rds-endpoint.amazonaws.com
DB_PORT=3306

# =======================
# S3 STORAGE (MinIO local)
# =======================
USE_S3=True
AWS_ACCESS_KEY_ID=myuser
AWS_SECRET_ACCESS_KEY=mystrongpassword123
AWS_S3_ENDPOINT_URL=http://localhost:9100
AWS_STORAGE_BUCKET_NAME=designia
AWS_S3_REGION_NAME=us-east-1
AWS_S3_VERIFY=False

# =======================
# STRIPE CONFIGURATION
# =======================
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_WEBHOOK_CONNECT_SECRET=whsec_...

# For production, use live keys
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_...
STRIPE_LIVE_SECRET_KEY=sk_live_...
STRIPE_LIVE_WEBHOOK_SECRET=whsec_...

# Payment Settings
PAYMENT_HOLD_DAYS=30
STRIPE_APPLICATION_FEE_PERCENT=2.9

# =======================
# EMAIL CONFIGURATION
# =======================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yoursite.com

# =======================
# CORS CONFIGURATION
# =======================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,https://your-frontend-domain.com

# =======================
# SECURITY SETTINGS
# =======================
CSRF_TRUSTED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# =======================
# FRONTEND URL
# =======================
FRONTEND_URL=https://your-frontend-domain.com

# =======================
# PAYMENT SECURITY
# =======================
PAYMENT_WHITELISTED_IPS=127.0.0.1,localhost,your-server-ip
